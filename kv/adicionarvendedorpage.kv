<AdicionarVendedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg1.png'
        Label:
            pos_hint: {'right':0.9 , 'top':0.8}
            size_hint: 0.8, 0.1
            bold: True
            text: 'Coloque[color=#00cfdb] o nome de um(a) vendedor(a)[/color] para acompanha-lo'
            markup: True
            bold: True



            id: mensagem_outrovendedor

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
            text: 'Adicionar Vendedor'
            pos_hint: {'right':0.9 , 'top':0.55}
            size_hint: 0.8, 0.2

        TextInput:
            pos_hint: {'right':0.9 , 'top':0.7}
            size_hint: 0.8, 0.1
            id: input_id_outrovendedor

        #Bot√£o VOLTAR -----------
        FloatLayout:
            pos_hint: {'right':1, 'top':0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right':0.2, 'top':0.9}
                size_hint: 0.2, 0.8
                source:'icones/voltar.png'
                on_release: app.mudar_tela('ajustespage')

        Label:
            pos_hint: {'right':0.9 , 'top':0.4}
            size_hint: 0.8, 0.1
            text:''
            markup: True
            bold: True
            id: mensagem_outrovendedor
